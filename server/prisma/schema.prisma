generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

model Room {
  id          Int        @id @default(autoincrement())
  name        String
  code        String     @unique
  messages    Message[]
  createdAt   DateTime   @default(now())
}

model Message {
  id                 Int       @id @default(autoincrement())
  text               String
  author             String
  profilePhotoUrl    String
  room               Room @relation(fields: [roomCode], references: [code])
  roomCode           String    
  createdAt          DateTime   @default(now())
}